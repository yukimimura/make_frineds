<% unless @user == current_user %>
  <% if @isRoom == true %>
    <%= link_to room_path(@roomId), class: 'btn btn-outline-dark btn-sm font-weight-bold' do %>
      <i class="fas fa-sms"></i> Message
    <% end %>
  <% else %>
    <%= form_for @room do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, value: @user.id %>
      <% end %>
      <%= f.submit 'Message', class: 'btn btn-outline-dark btn-sm font-weight-bold' %>
    <% end %>
  <% end %>
<% end %>