<%= render 'layouts/flash_messages'%>

<div class="container1">
	<div class="row">
		<div class="col-3 sidebar-left">
      <div class="sidebar_fixed text-center">
			</div>
		</div>
    <div class="col mt-5" id="main">
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <div class="text-center mb-4">
            <h2 class="font1">User edit</h2>
          </div>
        
          <% if @user.errors.any? %>
            <div class="notification is-danger">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.label :name, "Name", class: "font-weight-bold" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :email, "Email", class: "font-weight-bold" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :age, "Age", class: "font-weight-bold" %>
              <%= f.number_field :age, class: "form-control col-3" %>
            </div>
            <div class="form-group">
              <%= f.label :intro, "Introduction", class: "font-weight-bold" %>
              <%= f.text_area :intro, class: "form-control", rows: "3" %>
            </div>
            <%= f.label :image,"Profile image", class: "font-weight-bold" %>
            <div>
              <%= f.file_field :image, class: "" %>
            </div>
            <br>
          
            <div class="row">
              <div class="col-md-8 offset-md-2">
                <div class="btn-lg">
                  <%= button_tag(type: 'submit', class: 'font-weight-bold btn btn-outline-success btn-block') do %>
                    <i class="fas fa-pen"></i> Update
                  <% end %>
                </div>
              </div>
            </div>
          
          <% end %>

        </div>
      </div>
		</div>
		<div class="col-3 sidebar-right">
			<div class="sidebar_fixed">
			</div>
		</div>
	</div>
</div>