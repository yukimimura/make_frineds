<%= render 'layouts/flash_messages'%>

<div class="text-center">
  <h2>Log in</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 shadow p-5 mb-5 bg-white rounded">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'font-weight-bold' %><br />
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'font-weight-bold' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <div class="row">
          <div class="col-md-8 offset-md-2">
            <div class="btn-lg">
              <%= f.submit "Log in", class: 'font-weight-bold btn btn-success btn-block' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>