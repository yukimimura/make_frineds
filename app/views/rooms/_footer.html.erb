<footer class="fixed-bottom shadow" id="footer">
	<%= form_for @message, remote: true do |f| %>
		<div class="form-group">
			<%= f.text_area :content, class: 'form-control col-sm-6 offset-sm-3', rows: '1' %>
		</div>
		<%= f.hidden_field :room_id, value: @room.id %>
		<div class="form-group">
			<%= f.submit "送信", class: 'btn btn-primary btn-block disabled col-sm-6 offset-sm-3', id: 'message-button' %>
		</div>
	<% end %>
</footer>

