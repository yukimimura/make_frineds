<% @entry.each do |e| %>
  <p class="is-size-3  has-text-weight-bold has-text-centered mb-5">
  	<span class="icon">
      <i class="fas fa-user"></i>
    </span>
  	<%= link_to e.user.name, user_path(e.user.id) %>
  	</p>
<% end %>


		<div id="hoge" >
			<div id="main">
		    <% if @messages.present? %>
		      <% @messages.each do |m| %>
		        <% if m.user_id == current_user.id %>
		        	<div class="columns is-mobile">
							  <div class="column is-6 is-offset-6 has-text-right pb-0 pt-2"><%= m.content %></div>
							</div>
		        <% else %>
		        	<div class="columns is-mobile">
							  <div class="column is-6 has-text-left pb-0 pt-2">
							  	<span class="icon">
		                <i class="fas fa-user"></i>
		              </span>
              		<%= m.content %>
              	</div>
							</div>
		        <% end %>
		      <% end %>
		    <% else %>
		    	<p class="has-text-centered mt-5">メッセージはまだありません</p>
		    <% end %>
			</div>
		</div>



		<%= form_for @message do |f| %>
			<div class="field has-addons">
  			<div class="control is-expanded">
		  		<%= f.text_field :content, placeholder: "メッセージを入力して下さい", class:'input' %>
		 		</div>
		  	<%= f.hidden_field :room_id, value: @room.id %>
		 		<div class="control">
		  		<%= f.submit "送信", class: 'button is-info' %>
		  	</div>
			</div>
		<% end %>